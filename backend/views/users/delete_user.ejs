<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" />

     <!-- FontAwesome Icons -->
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="/styles.css" />
    <title>CTM Equipment Management</title>
</head>

<body>
    <div class="d-flex" id="wrapper">
        <!-- Side Nav bar -->
        <div class="bg-success" id="sidebar-wrapper">
            <div class="sidebar-heading text-center py-4 primary-text fs-4 fw-bold text-uppercase border-bottom">CTM Equipment<br> Management</div>
            <div class="list-group list-group-flush my-3">
                <a href="/" class="list-group-item list-group-item-action bg-transparent second-text active"><i
                        class="fas fa-tachometer-alt me-2"></i>Dashboard</a>
                <a href="#" class="list-group-item list-group-item-action bg-transparent second-text fw-bold"><i
                        class="fas fa-user me-2"></i>Profile</a>
                <a href="#" class="list-group-item list-group-item-action bg-transparent second-text fw-bold"><i
                        class="fas fa-gift me-2"></i>Inventory</a>
                <a href="#" class="list-group-item list-group-item-action bg-transparent second-text fw-bold"><i
                        class="fas fa-users me-2"></i>User Management</a>
                <a href="#" class="list-group-item list-group-item-action bg-transparent second-text fw-bold"><i
                        class="fas fa-map-marker-alt me-2"></i>Location Log</a>
                <a href="#" class="list-group-item list-group-item-action bg-transparent text-danger fw-bold"><i
                        class="fas fa-power-off me-2"></i>Logout</a>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-light py-4 px-4">
                <div class="d-flex align-items-center">
                    <i class="fas fa-align-left primary-text fs-4 me-3" id="menu-toggle"></i>
                    <h2 class="fs-2 m-0">User Mangement</h2>
                </div>

                

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item dropdown">
                            <% if(!isAuthenticated) { %>
                                <a class="nav-link second-text fw-bold" href="/login">Login</a>
                            <% } else { %>
                                <a class="nav-link dropdown-toggle second-text fw-bold" href="#" id="navbarDropdown"
                                    role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user me-2"></i>
                                    <%= user.nickname %>
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" href="#">Profile</a></li>
                                    <li><a class="dropdown-item" href="/logout">Logout</a></li>
                                </ul>
                            <% } %> 
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Read One Equipment page -->

            <div class="container mt-5 mx-auto col-10 col-md-8 col-lg-6">
                <h3 class="fs-14 mb-3">Delete User</h3>
                <div class="form-group col-md-3">
                  <label for="id" class="fs-7"><strong>User ID:</strong></label>
                  <%= data[0].user_id %>
                </div><br />
                <div class="form-group col-md-6">
                  <label for="user_name" class="fs-7"><strong>User Name:</strong></label>
                  <%= data[0].user_name %>
                </div><br />
                <div class="form-group col-md-6">
                  <label for="role" class="fs-5"><strong>Role:</strong></label>
                  <%= data[0].role %>
                </div><br />
                <div class="form-group col-md-6">
                  <label for="address" class="fs-5"><strong>Address:</strong></label>
                  <%= data[0].address %>
                </div><br />
                <div class="form-group col-md-6">
                  <label for="phone_number" class="fs-5"><strong>Phone Number:</strong></label>
                  <%= data[0].phone_number %>
                </div><br />
                <p class="fs-5">Are you sure you want to remove this user from the system?</p><br />
                <div class="row d-flex justify-content-between" style="width: 50%;">
                  <div class="col-2">
                    <button type="submit" class="btn btn-success fs-5"><a href="/users/viewall_users" style="text-decoration: none; color: white;">No</a></button>
                  </div><br />
                  <div class="col-md-8 text-center">
                    <form method="post" action="/delete_user">
                      <input type="number" name="id" value="<%= data[0].user_id %>" hidden>
                      <button type="submit" class="btn btn-danger fs-5">Yes</button>
                    </form>
                  </div>
                </div>
              </div>
              
        </div>
    </div>
    <!-- /#page-content-wrapper -->
    </div>

    <!-- Bootstrap CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
    var el = document.getElementById("wrapper");
    var toggleButton = document.getElementById("menu-toggle");
    
    toggleButton.onclick = function () {
        el.classList.toggle("toggled");
    }; 

    function previewImage(event) {
        var reader = new FileReader();
        reader.onload = function() {
          var output = document.getElementById('preview');
          output.src = reader.result;
        };
        reader.readAsDataURL(event.target.files[0]);
      }
    </script>
</body>

</html>