<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" />

     <!-- FontAwesome Icons -->
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="/styles.css" />
    <title>CTM Equipment Management</title>
</head>

<body>
    <div class="d-flex" id="wrapper">
        <!-- Side Nav bar -->
        <div class="bg-success" id="sidebar-wrapper">
            <div class="sidebar-heading text-center py-4 primary-text fs-4 fw-bold text-uppercase border-bottom">CTM Equipment<br> Management</div>
            <div class="list-group list-group-flush my-3">
                <a href="/" class="list-group-item list-group-item-action bg-transparent second-text active"><i
                        class="fas fa-tachometer-alt me-2"></i>Dashboard</a>
                <a href="#" class="list-group-item list-group-item-action bg-transparent second-text fw-bold"><i
                        class="fas fa-user me-2"></i>Profile</a>
                <a href="/" class="list-group-item list-group-item-action bg-transparent second-text fw-bold"><i
                        class="fas fa-gift me-2"></i>Inventory</a>
                <a href="/users/administer_users" class="list-group-item list-group-item-action bg-transparent second-text fw-bold"><i
                        class="fas fa-users me-2"></i>User Management</a>
                <a href="#" class="list-group-item list-group-item-action bg-transparent second-text fw-bold"><i
                        class="fas fa-map-marker-alt me-2"></i>Location Log</a>
                <a href="/logout" class="list-group-item list-group-item-action bg-transparent text-danger fw-bold"><i
                        class="fas fa-power-off me-2"></i>Logout</a>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-light py-4 px-4">
                <div class="d-flex align-items-center">
                    <i class="fas fa-align-left primary-text fs-4 me-3" id="menu-toggle"></i>
                    <h2 class="fs-2 m-0">User Management</h2>
                </div>

                

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                
            </nav>

            <div class="container-fluid px-4">

                <div class="row my-5">
                    <h3 class="fs-4 mb-3">Users</h3>
                    <div class="col">
                      <!--  <a href="#" class="btn btn-success mb-3"> <i class="fa-solid fa-plus"></i> Add User</a>-->
                        <div class="input-group mb-3" style="max-width: 20%;">
                            <span class="input-group-text" id="inputGroup-sizing-default">Search</span>
                            <input type="text" class="form-control" id="search-input" onkeyup="search()" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                        </div>
                        
                        <div class="row justify-content-end mt-3">
                            <div class="col-auto">
                              <a href="/users/viewall_users" class="btn btn-md btn-success">View All Users</a>
                            </div>
                        </div>                          

                        <table class="table bg-white rounded shadow-sm  table-hover">
                        <table class="table bg-white rounded shadow-sm  table-hover">
                            <thead>
                                <tr>
                                    <th scope="col" width="400">User Id</th>
                                    <th scope="col" width="400">First Name</th>
                                    <th scope="col"width="150">Last Name</th>
                                    <th scope="col"width="200">Phone Number</th>

                                    <th scope="col"width="200">Actions</th>
                                </tr>
                            </thead>
                            <tbody id="user-list">
                                <!-- Loop through fetched data and build the user list -->
                                  <% for(var i = 0; i < data.length; i++) {%>
                                    <tr class="item-row">
                                      <th scope="row"><%= data[i].user_id %></th>
                                      <td><%= data[i].first_name %></td>
                                      <td><%= data[i].last_name %></td>
                                      <td><%= data[i].contact_no %></td>
                                                
                                      <td>
                                          <!-- view button -->
                                          <a href="/users/viewone_user/<%= data[i].user_id %>" class="link-dark"><i class="fa-solid fa-eye fs-5 me-3" ></i></a>
                                          <!-- pen button -->
                                          <a href="/users/edit_user/<%= data[i].user_id %>" class="link-dark"><i class="fa-solid fa-pen-to-square fs-5 me-3"></i></a>
                                          <!-- trash  button-->
                                          <a href="/users/delete_user/<%= data[i].user_id %>" class="link-dark"><i class="fa-solid fa-trash fs-5"></i></a>
                                      </td>
                                    </tr>
                                  <% } %>
                              </tbody>
                            
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- /#page-content-wrapper -->
    </div>

    <!-- Bootstrap CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
    var el = document.getElementById("wrapper");
    var toggleButton = document.getElementById("menu-toggle");
    
    toggleButton.onclick = function () {
        el.classList.toggle("toggled");
    }; 

    // Live search function
    // Taken from https://www.w3schools.com/howto/howto_js_filter_lists.asp
    function search() {
    // Declare variables
    var input, filter, list, tr, td, i, txtValue;
    input = document.getElementById('search-input');
    filter = input.value.toUpperCase();
    list = document.getElementById("user-list");
    tr = list.getElementsByTagName('tr');

    // Loop through all list users, and hide those who don't match the search query
    for (i = 0; i < tr.length; i++) {
        // Currently searches by user_desc
        td = tr[i].getElementsByTagName("td")[0];
        txtValue = td.textContent || td.innerText;
        if (txtValue.toUpperCase().indexOf(filter) > -1) {
        tr[i].style.display = "";
        } else {
        tr[i].style.display = "none";
        }
    }}
    </script>
    
</body>

</html>