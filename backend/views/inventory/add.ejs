            <!-- Add Equipment page -->

             <div class="container mt-5 mx-auto col-10 col-md-8 col-lg-6"> 
                <h3 class="fs-4 mb-3">Add Equipment</h3>

                <form method="POST" onkeydown="return event.key != 'Enter';">
                  
                  <div class="form-group col-md-6">
                    <label for="itemdesc">Item:</label>
                    <input type="text" class="form-control" id="itemdesc" name="item_desc" placeholder="Enter item name" >
                  </div><br/>

                  <div class="form-group col-md-6">
                    <label for="quantity">Category:</label>
                    <input type="text" class="form-control" id="category" name="category" placeholder="Category">
                  </div><br/>

                  <div class="mb-3">
                    <label for="purchase_date">Purchase Date:</label><br>
                    <input id="purchase_date" name="purchase_date" class="form-control" type="date"/>
                  </div>
                  
                  <div class="form-group col-md-6">
                    <label for="condition">Condition:</label>
                     <select id="condition" name="condition" class="form-control">
                        <option value="">Not assigned</option>
                        <option value="New">New</option>
                        <option value="Used">Used</option>
                        <option value="Broken">Broken</option>
                      </select>
                  </div><br/>

                  <div class="form-group col-md-6">
                    <label for="quantity">Quantity:</label>
                    <input type="text" class="form-control" id="item_qty" name="item_qty" placeholder="Quantity">
                  </div><br/>

                  <div class="form-group col-md-6">
                    <label for="user_id">Assigned to:</label>
                     <select id="user_id" name="user_id" class="form-control">
                      <option value="">Not assigned</option>
                      <% for(var i = 0; i < users.length; i++){%>
                        <option value="<%=users[i].user_id%>"><%= users[i].first_name %> <%= users[i].last_name %></option>
                      <% } %>
                      </select>
                  </div><br/>

                  <!-- Add Location Modal -->
                <button type="button" class="btn btn-success mb-3" data-bs-toggle="modal" data-bs-target="#address-form" id="address_btn">New Location</button>

                  <div class="form-group mb-3">
                    <label for="locationAdd" class="form-label">Current Location</label>
                    <input class="form-control" id="currentLocation-search" placeholder="Type to search..." onkeyup="filterCurrent()">
                    <div id="currentOptions">
                      <% for(var i = 0; i < address.length; i++) {
                        var addressStr =  address[i].street_line_1
                        if (address[i].street_line_2 !== null){
                          addressStr += ' ' + address[i].street_line_2
                        }
                        addressStr += ', ' + address[i].city + ', ' + address[i].state + ', ' + address[i].postcode
                        if(address[i].country !== null){
                          addressStr += ', ' + address[i].country
                        }
                        %>
                        <input type="radio" class="address-radio" name="current_address" value="<%= address[i].address_id %>" id="c-<%= address[i].address_id %>">
                        <label class="address-option" for="c-<%= address[i].address_id %>" ><%= addressStr %><br/></label>
                        <% } %></div></div>

                   <div class="form-group mb-3">
                    <label for="previousLocation" class="form-label">Previous Location</label>
                    <input class="form-control" id="previousLocation-search" placeholder="Type to search..." onkeyup="filterPrevious()">
                    <div id="previousOptions">
                        <% for(var i = 0; i < address.length; i++) {
                        var addressStr =  address[i].street_line_1
                        if (address[i].street_line_2 !== null){
                          addressStr += ' ' + address[i].street_line_2
                        }
                        addressStr += ', ' + address[i].city + ', ' + address[i].state + ', ' + address[i].postcode
                        if(address[i].country !== null){
                          addressStr += ', ' + address[i].country
                        }
                        %>
                        <input type="radio" class="address-radio" name="previous_address" value="<%= address[i].address_id %>" id="p-<%= address[i].address_id %>">
                        <label class="address-option" for="p-<%= address[i].address_id %>" ><%= addressStr %></label><% } %>
                    </div>
                </div>

                <div class="form-group col-md-6">
                  <label for="keywords">Keywords:</label>
                  <textarea class="form-control" id="keywords" name="keywords" rows="5" placeholder="Enter keywords"></textarea>
                  <p class="keywords">Separate keywords with commas</p>
                </div>

                  <div class="mx-auto col-10 col-md-8 col-lg-6">
                    <button type="submit" class="btn btn-success text" action="/inventory/add">Submit</button>
                    <button type="button" href="/" class="btn btn-secondary">Inventory</button>
                  </div>
                </form>
                <form class="modal fade" id="address-form" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" method="POST" onkeydown="return event.key != 'Enter';">
                  <div class="modal-dialog">
                  <div class="modal-content">
                      <div class="modal-header">
                      <h5 class="modal-title" id="new_address">Add New Location</h5>
                      <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close" ></button>

                      </div>
                      <div class="modal-body">
                          <div class="form-group">
                              <label for="street_line">Street Line:</label>
                              <input type="text" class="form-control" id="street_line_1" placeholder="123 Smith st ">
                          </div>
                          <br>
                          <div class="form-group">
                            <label for="street_line_2">Street Line(2):</label>
                            <input type="text" class="form-control" id="street_line_2" placeholder=" ">
                        </div>
                        <br>

                      <div class="form-group">
                          <label for="city">City:</label>
                          <input type="text" class="form-control" id="city" placeholder="Melbourne" >
                        </div>
                        <br>

                        <div class="form-group">
                          <label for="country">Country:</label>
                          <input type="text" class="form-control" id="country" placeholder="Australia" >
                        </div>
                        <br>
                        <div class="form-group">
                          <label for="postcode">Postcode:</label>
                          <input type="text" class="form-control" id="postcode" placeholder="3000" >
                        </div>
                      <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" >Cancel</button>
                      <button type="submit" class="btn btn-success" formaction="/inventory/add/address">Add</button>
                      </div>
                  </div>
                  </div>
              </form>

                
            </div>

        
        </div>
    </div>
    <!-- /#page-content-wrapper -->
    </div>

    <!-- Bootstrap CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script> -->
    <script>
    var el = document.getElementById("wrapper");
    var toggleButton = document.getElementById("menu-toggle");
    
    toggleButton.onclick = function () {
        el.classList.toggle("toggled");
    }; 
    
    var modal = document.getElementById("address-form");

    // Get the button that opens the modal
    var btn = document.getElementById("address_btn");

    // Get the <span> element that closes the modal
    var span = document.getElementsByClassName("close")[0];

    // When the user clicks on the button, open the modal
    btn.onclick = function() {
      modal.style.display = "block";
    }

    // When the user clicks on <span> (x), close the modal
    span.onclick = function() {
      modal.style.display = "none";
    }

    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function(event) {
      if (event.target == modal) {
        modal.style.display = "none";
      }
    } 

    function filterCurrent() {
      var input, filter, ul, li, a, i, match;
      input = document.getElementById("currentLocation-search");
      if(input.value === "") {return;}
      filter = input.value.toUpperCase();
      div = document.getElementById("currentOptions");
      a_label = div.getElementsByTagName("label");
      a_radio = div.getElementsByTagName("input");
      match = 0;
      for (i = 0; i < a_label.length; i++) {
        if (match > 5){ 
          for (i = 0; i < a_label.length; i++) {
            if(a_radio[i].ischecked){
              a_radio[i].style.display = "inline";
              a_label[i].style.display = "inline";
            }
            else{
              a_radio[i].style.display = "none";
              a_label[i].style.display = "none";
            }
          }
          break; 
        }
        txtValue = a_label[i].textContent || a_label[i].innerText;
        if (txtValue.toUpperCase().indexOf(filter) > -1) {
          a_radio[i].style.display = "inline";
          a_label[i].style.display = "inline";
          match += 1;
        } else {
          if(a_radio[i].checked){
            a_radio[i].style.display = "inline";
            a_label[i].style.display = "inline";
          }
          else{
            a_radio[i].style.display = "none";
            a_label[i].style.display = "none";
          }
        }
      }
    } 

    function filterPrevious() {
      var input, filter, ul, li, a, i, match;
      input = document.getElementById("previousLocation-search");
      if(input.value === "") {return;}
      filter = input.value.toUpperCase();
      div = document.getElementById("previousOptions");
      a_label = div.getElementsByTagName("label");
      a_radio = div.getElementsByTagName("input");
      match = 0;
      for (i = 0; i < a_label.length; i++) {
        if (match > 5){ 
          for (i = 0; i < a_label.length; i++) {
            if(a_radio[i].ischecked){
              a_radio[i].style.display = "inline";
              a_label[i].style.display = "inline";
            }
            else{
              a_radio[i].style.display = "none";
              a_label[i].style.display = "none";
            }
          }
          break; 
        }
        txtValue = a_label[i].textContent || a_label[i].innerText;
        if (txtValue.toUpperCase().indexOf(filter) > -1) {
          a_radio[i].style.display = "inline";
          a_label[i].style.display = "inline";
          match += 1;
        } else {
          if(a_radio[i].checked){
            a_radio[i].style.display = "inline";
            a_label[i].style.display = "inline";
          }
          else{
            a_radio[i].style.display = "none";
            a_label[i].style.display = "none";
          }
        }
      }
    } 
    </script>
    
</body>

</html>